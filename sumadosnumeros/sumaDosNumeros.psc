	Escribir "Ingrese primer número";//mensaje para el usuario
	Leer numero1;//almacena valor ingresado
	Escribir "Ingrese el segundo número";//mensaje para el usuario
	leer numero2;//almacena valor ingresado
	resultado<-numero1+numero2;//procedimiento de suma almacenado en variable resultado
	Escribir "El resultado de la suma es: ", resultado; // mensaje de resultado adjuntando variable resultado
